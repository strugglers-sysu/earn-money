/* pages/home/taskInfo/taskInfo.wxss */
.showLabel {
  font-size: 28rpx;
  margin-top: .77em;
  margin-bottom: .3em;
  padding-left: 15px;
  padding-right: 15px;
  color: #999999;
}

.showPanel {
  position: relative;
  background-color: #fff;
  padding-left: 15px;
  padding-right: 15px;
  padding-bottom: 15px;
  padding-top: 15px;
}

.showPanelTitle {
  font-size: 20px;
  color: #000000;
}

.tip {
  color: #576B95;
  font-size: 28rpx; 
  margin: 25rpx; 
  margin-bottom: 75px; 
  text-align: center;
}

.menubar {
  position: fixed;
  bottom: 0;
  display: flex;
  display: -webkit-flex;
  flex-direction: row;
  align-items: stretch;
  width: 100%;
  height: 100rpx;
  border-top: 1px solid #e5e5e5;
  background-color: #f8f8f8;
}

.menubar__btn {
  position: relative;
  flex: 2;
  padding-left: 15px;
  padding-right: 15px;
  margin-bottom: 0;
  height: 100rpx;  
  font-size: 36rpx;
  line-height: 100rpx;
  border: none;
  /* border-radius: 0; */
  box-sizing: border-box;
  text-decoration: none;
  text-align: center;
  vertical-align: middle;
}

.menubar__btn::after {
  display: none;
}